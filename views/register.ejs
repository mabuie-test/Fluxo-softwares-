<%- include('partials/head') %>
<%- include('partials/header') %>
    <main class="auth-page section">
      <div class="container auth-grid">
        <div class="auth-info">
          <span class="eyebrow">Comece agora</span>
          <h1>Faça parte do ecossistema Fluxo.</h1>
          <p>
            Tenha acesso a propostas personalizadas, histórico de pedidos, facturação e canal directo com a nossa equipa
            de especialistas.
          </p>
          <ul class="auth-benefits">
            <li>Gestão centralizada das solicitações</li>
            <li>Actualizações em tempo real</li>
            <li>Workshops e eventos exclusivos</li>
          </ul>
          <a href="/login" class="button button-outline">Já tem conta? Entre</a>
        </div>
        <div class="auth-card">
          <h2>Criar conta</h2>
          <% if (errors.length) { %>
          <div class="alert alert-error">
            <ul>
              <% errors.forEach((error) => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
          <% } %>
          <form action="/registo" method="post" class="form">
            <div class="form-group">
              <label for="name">Nome completo</label>
              <input type="text" id="name" name="name" value="<%= formData.name || '' %>" required />
            </div>
            <div class="form-group">
              <label for="email">E-mail</label>
              <input type="email" id="email" name="email" value="<%= formData.email || '' %>" required />
            </div>
            <div class="form-group">
              <label for="company">Empresa</label>
              <input type="text" id="company" name="company" value="<%= formData.company || '' %>" />
            </div>
            <div class="form-group">
              <label for="phone">Telefone</label>
              <input type="text" id="phone" name="phone" value="<%= formData.phone || '' %>" />
            </div>
            <div class="form-group">
              <label for="password">Palavra-passe</label>
              <input type="password" id="password" name="password" required minlength="8" />
            </div>
            <div class="form-group">
              <label for="confirmPassword">Confirmar palavra-passe</label>
              <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8" />
            </div>
            <button type="submit" class="button button-primary">Criar conta</button>
          </form>
        </div>
      </div>
    </main>
<%- include('partials/footer') %>
